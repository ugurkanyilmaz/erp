{
    # Otomatik HTTPS kapalı (İsteğin üzerine HTTP üzerinden 8443 kullanıyoruz)
    auto_https off
    admin off
}

# Belirli IP'ler yerine tüm interface'lerde 8443 portunu dinle
:8443 {
    encode gzip zstd

    header {
        # Güvenlik headerları
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Health check
    handle /health {
        respond "OK" 200
    }

    # API İstekleri -> Direkt .NET Container'a
    handle /api/* {
        reverse_proxy ketenerp-api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Static uploads (serve from API's wwwroot) -> yönlendir API container'a
    handle /uploads/* {
        reverse_proxy ketenerp-api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Swagger (Opsiyonel)
    handle /swagger* {
        reverse_proxy ketenerp-api:8080
    }

    # Diğer her şey (Frontend) -> Nginx Container'a
    handle {
        reverse_proxy ketenerp-frontend:80 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    log {
        output file /var/log/caddy/access.log {
            roll_size 10MB
            roll_keep 5
        }
    }
}