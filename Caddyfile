# TLS Cloudflare üzerinden yönetildiği için Caddy yalnızca HTTP sunuyor.

# Tüm hostlardan gelen HTTP isteklerini karşılayalım (IP ile erişim dahil).
http:// {
    encode gzip zstd

    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    handle /health {
        respond "OK" 200
    }

    handle /api/* {
        reverse_proxy ketenerp-api:8080 {
            header_up Host {http.request.host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    handle /swagger* {
        reverse_proxy ketenerp-api:8080
    }

    handle {
        reverse_proxy ketenerp-frontend:80 {
            header_up Host {http.request.host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    log {
        output file /var/log/caddy/access.log {
            roll_size 10MB
            roll_keep 5
        }
    }

}
